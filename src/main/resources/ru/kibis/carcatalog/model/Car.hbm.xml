<hibernate-mapping>
    <class name ="ru.kibis.carcatalog.model.Car" table="car_catalog">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="car_name"/>
        <many-to-one name="body" column="body_id" class="ru.kibis.carcatalog.model.Body"/>
        <many-to-one name="engine" column="engine_id" class="ru.kibis.carcatalog.model.Engine"/>
        <many-to-one name="gearbox" column="gearbox_id" class="ru.kibis.carcatalog.model.Gearbox"/>
    </class>
</hibernate-mapping>